
<div class="input-group my:item">
    <label>
        Name:
        <input type="text" class="form-control input-lg" value="{name}" name="name" event-input="input">
    </label>
    <label>
        Code:
        <input type="text" class="form-control input-lg" value="{code}" name="code" event-input="input">
    </label>
    <span class="input-group-btn">
        <button class="btn btn-default btn-lg" event-click="onDelete">
            <span class="glyphicon glyphicon-remove"></span>
            delete
        </button>
    </span>
</div>
